        ZIndex = 3,
        Parent = SettingsFrame
    })
    
    Create("UICorner", {
        CornerRadius = UDim.new(0, 12),
        Parent = SettingsTopBar
    })
    
    local SettingsTitle = Create("TextLabel", {
        Name = "SettingsTitle",
        BackgroundTransparency = 1,
        Size = UDim2.new(0, 200, 1, 0),

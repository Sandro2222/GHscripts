        TextSize = isMobile and 12 or 14,
        ZIndex = 4,
        Parent = tab.Frame
    })
    
    Create("UICorner", {CornerRadius = UDim.new(0, 8), Parent = ButtonElement})
    
    ButtonElement.MouseButton1Click:Connect(function()
        Tween(ButtonElement, {Size = UDim2.new(0.85, 0, 0, isMobile and 30 or 40)}, 0.1)
        Tween(ButtonElement, {BackgroundColor3 = Greatness.CurrentTheme.Accent}, 0.1)
        wait(0.1)
        Tween(ButtonElement, {Size = UDim2.new(0.9, 0, 0, isMobile and 35 or 45)}, 0.1)
        Tween(ButtonElement, {BackgroundColor3 = Greatness.CurrentTheme.Secondary}, 0.3)
        
        Button.Callback()
    end)
    
    Button.Button = ButtonElement
    table.insert(tab.Elements, Button)
    
    tab.Frame.CanvasSize = UDim2.new(0, 0, 0, (#tab.Elements * (isMobile and 47 or 57)) + 20)
    
    return Button
end


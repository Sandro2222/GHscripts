    })
    
    Window.CloseButton = Create("TextButton", {
        Name = "CloseButton",
        BackgroundColor3 = Color3.fromRGB(255, 60, 60),
        BackgroundTransparency = 0.3,
        Size = isMobile and UDim2.new(0, 25, 0, 25) or UDim2.new(0, 30, 0, 30),
        Position = isMobile and UDim2.new(1, -30, 0.5, -12.5) or UDim2.new(1, -35, 0.5, -15),
        Font = Enum.Font.GothamBold,
        Text = "×",
        TextColor3 = Color3.new(1, 1, 1),
        TextSize = isMobile and 16 or 20,
        ZIndex = 4,
        Parent = Window.TopBar
    })
    
    Create("UICorner", {CornerRadius = UDim.new(1, 0), Parent = Window.CloseButton})
    
    local tabContainerWidth = isMobile and 120 or 140

        while Window.LoadingFrame and Window.LoadingFrame.Parent do
            Tween(LoadingBackground, {BackgroundTransparency = 0.7}, 2)
            wait(2)
            Tween(LoadingBackground, {BackgroundTransparency = 0.9}, 2)
            wait(2)
        end
    end)
    

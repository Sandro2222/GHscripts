        Position = isMobile and UDim2.new(0.5, -30, 0.3, -30) or UDim2.new(0.5, -40, 0.3, -40),
        Image = "rbxassetid://99955288663052",
        ZIndex = 22,
        Parent = LoadingContainer
    })
    
    local LoadingText = Create("TextLabel", {
        Name = "LoadingText",
        BackgroundTransparency = 1,
        Size = isMobile and UDim2.new(0, 180, 0, 25) or UDim2.new(0, 200, 0, 30),
        Position = isMobile and UDim2.new(0.5, -90, 0.6, 0) or UDim2.new(0.5, -100, 0.6, 0),
        Font = Enum.Font.GothamSemibold,
        Text = "Greatness UI",
        TextColor3 = Greatness.CurrentTheme.Text,
